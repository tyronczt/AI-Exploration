/* app.wxss */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Arial, sans-serif;
  background-color: #f8f9fa;
  color: #333;
  font-size: 28rpx;
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.container {
  padding: 24rpx;
  box-sizing: border-box;
}

.btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 16rpx;
  text-align: center;
  margin: 20rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.25);
}

.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  letter-spacing: 1rpx;
}

.subtitle {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.text {
  font-size: 28rpx;
  line-height: 44rpx;
  color: #666;
}

/* 通用颜色变量 */
.text-primary {
  color: #667eea;
}

.text-success {
  color: #51cf66;
}

.text-warning {
  color: #ffc078;
}

.text-error {
  color: #ff6b6b;
}

.text-muted {
  color: #999;
}

/* 通用间距 */
.mt-small {
  margin-top: 16rpx;
}

.mt-medium {
  margin-top: 24rpx;
}

.mt-large {
  margin-top: 32rpx;
}

.mb-small {
  margin-bottom: 16rpx;
}

.mb-medium {
  margin-bottom: 24rpx;
}

.mb-large {
  margin-bottom: 32rpx;
}
