/* app.wxss */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background-color: #f5f5f5;
  color: #333;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.btn {
  background-color: #1aad19;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  text-align: center;
  margin: 20rpx 0;
}

.card {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.text {
  font-size: 26rpx;
  line-height: 42rpx;
}
