/* favorites.wxss */
.container {
  background-color: #ffffff;
  min-height: 100vh;
  padding: 0;
}

/* 头部样式 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  font-size: 36rpx;
  color: #333333;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  text-align: center;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.more-btn {
  font-size: 36rpx;
  color: #666666;
}

.audio-btn {
  font-size: 36rpx;
  color: #666666;
}

/* 标签栏样式 */
.tabs {
  display: flex;
  background-color: #f5f5f5;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.tab-item {
  margin-right: 50rpx;
  font-size: 28rpx;
  color: #666666;
  padding-bottom: 10rpx;
}

.tab-item.active {
  color: #1aad19;
  border-bottom: 3rpx solid #1aad19;
  font-weight: bold;
}

/* 单词列表样式 */
.word-list {
  padding: 0 30rpx;
}

.word-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.word-info {
  flex: 1;
}

.word {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.chinese-meaning {
  font-size: 28rpx;
  color: #666666;
}

.audio-icon {
  font-size: 36rpx;
  color: #1aad19;
  margin-left: 20rpx;
}

/* 空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  color: #999999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.go-study-btn {
  background-color: #1aad19;
  color: white;
  border-radius: 50rpx;
  padding: 15rpx 40rpx;
  font-size: 28rpx;
}

/* 删除按钮样式 */
.delete-icon {
  font-size: 32rpx;
  color: #ff4d4f;
  margin-left: 20rpx;
}