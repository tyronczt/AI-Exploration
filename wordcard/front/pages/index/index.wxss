/* index.wxss */
.container {
  padding: 24rpx;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  min-height: 100vh;
}

/* 用户信息区域 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.welcome-wrapper {
  flex: 1;
}

.welcome-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.welcome-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 400;
}

/* 学习统计 */
.stats {
  display: flex;
  background-color: white;
  border-radius: 20rpx;
  padding: 36rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 1rpx;
  height: 60rpx;
  background: linear-gradient(180deg, transparent, #e0e0e0, transparent);
}

.stat-value {
  font-size: 52rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 12rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.stat-label {
  font-size: 24rpx;
  color: #757575;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* 开始学习按钮 */
.start-learning {
  margin-bottom: 24rpx;
}

.start-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 44rpx;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.35);
  position: relative;
  overflow: hidden;
}

.start-btn::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: ripple 3s linear infinite;
}

@keyframes ripple {
  0% {
    transform: translate(-50%, -50%) scale(0);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0;
  }
}

.btn-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.btn-text {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  letter-spacing: 4rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 每日英语名言 */
.quote-section {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(252, 182, 159, 0.25);
  position: relative;
  overflow: hidden;
}

.quote-section::before {
  content: '"';
  position: absolute;
  top: -20rpx;
  left: 20rpx;
  font-size: 200rpx;
  color: rgba(255, 255, 255, 0.3);
  font-family: Georgia, serif;
  line-height: 1;
}

.quote-icon {
  font-size: 40rpx;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 1;
}

.quote-content {
  position: relative;
  z-index: 1;
}

.quote-text {
  font-size: 28rpx;
  line-height: 44rpx;
  color: #5d4037;
  font-style: italic;
  margin-bottom: 16rpx;
  font-weight: 500;
  font-family: Georgia, 'Times New Roman', serif;
}

.quote-translation {
  font-size: 24rpx;
  line-height: 38rpx;
  color: #6d4c41;
  margin-bottom: 12rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.quote-author {
  font-size: 22rpx;
  color: #8d6e63;
  text-align: right;
  font-style: italic;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

/* 学习提示 */
.tips {
  background-color: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.tips-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  letter-spacing: 1rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #666;
  line-height: 48rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-dot {
  color: #667eea;
  font-size: 32rpx;
  margin-right: 12rpx;
  line-height: 48rpx;
  font-weight: bold;
}

.tip-text {
  flex: 1;
  line-height: 48rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}
