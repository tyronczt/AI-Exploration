/* study.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.study-header {
  margin-bottom: 30rpx;
}

.progress {
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: right;
  margin-bottom: 10rpx;
}

.progress-bar {
  height: 10rpx;
  background-color: #e0e0e0;
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #1aad19;
  border-radius: 5rpx;
  transition: width 0.3s ease;
}

.wordbook-info {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

.word-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.word-pronunciation {
  text-align: center;
  margin-bottom: 30rpx;
}

.word {
  font-size: 64rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.pronunciation {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.audio-btn {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.audio-btn image {
  width: 30rpx;
  height: 30rpx;
}

.word-meaning {
  margin-bottom: 30rpx;
}

.part-of-speech {
  font-size: 28rpx;
  color: #1aad19;
  margin-bottom: 10rpx;
  font-style: italic;
}

.chinese-meaning {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 48rpx;
}

.english-definition {
  font-size: 26rpx;
  color: #666;
  line-height: 40rpx;
}

.example-sentence {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 12rpx;
}

.sentence-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.sentence {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 40rpx;
}

.sentence-translation {
  font-size: 24rpx;
  color: #666;
  line-height: 36rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 60rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  width: 150rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.forget-btn {
  background-color: #ffebee;
  color: #c62828;
}

.uncertain-btn {
  background-color: #fff3e0;
  color: #ef6c00;
}

.remember-btn {
  background-color: #e8f5e8;
  color: #2e7d32;
}

.btn-text {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.btn-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon image {
  width: 40rpx;
  height: 40rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.loading-text {
  font-size: 28rpx;
}
