/* study.wxss */
.container {
  background-color: #e3f2fd;
  min-height: 100vh;
  padding: 0;
}

/* 学习进度信息 */
.study-info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #e3f2fd;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-label {
  color: #666;
  margin-bottom: 5rpx;
}

.info-value {
  color: #333;
  font-weight: bold;
}

/* 单词卡片 */
.word-card {
  background-color: white;
  border-radius: 30rpx;
  padding: 50rpx 30rpx;
  margin: 0 30rpx 40rpx 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 单词标题 */
.word-title {
  font-size: 64rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

/* 例句 */
.example-sentence {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 48rpx;
}

/* 正确答案 */
.correct-answer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  border: 4rpx solid #4fc3f7;
  border-radius: 40rpx;
  padding: 25rpx 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(79, 195, 247, 0.3);
}

.answer-text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.check-icon {
  font-size: 36rpx;
  color: #4caf50;
  font-weight: bold;
}

/* 选项按钮 */
.option-buttons {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
  margin-bottom: 50rpx;
}

.option-btn {
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  transition: all 0.3s ease;
}

.option-btn:active {
  background-color: #e0e0e0;
  transform: scale(0.98);
}

/* 功能按钮 */
.function-buttons {
  display: flex;
  justify-content: space-around;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.func-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 25rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.func-icon {
  font-size: 36rpx;
}

.func-text {
  font-size: 24rpx;
  color: #666;
}

/* 下一个按钮 */
.next-button {
  background-color: #4fc3f7;
  border-radius: 50rpx;
  padding: 35rpx;
  margin: 0 30rpx 50rpx 30rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(79, 195, 247, 0.4);
  transition: all 0.3s ease;
}

.next-button:active {
  background-color: #29b6f6;
  transform: scale(0.98);
}

.next-text {
  color: white;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  color: #999;
}

.loading-text {
  font-size: 28rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
}
