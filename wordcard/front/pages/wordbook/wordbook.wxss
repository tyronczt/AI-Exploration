/* wordbook.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  color: #333;
}

.filter {
  display: flex;
  background-color: white;
  border-radius: 8rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow-x: auto;
  white-space: nowrap;
}

.filter-item {
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 20rpx;
  margin-right: 10rpx;
  cursor: pointer;
}

.filter-item.active {
  background-color: #1aad19;
  color: white;
}

.filter-item:last-child {
  margin-right: 0;
}

.wordbook-list {
  display: flex;
  flex-direction: column;
}

.wordbook-item {
  display: flex;
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  align-items: center;
}

.cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
}

.action {
  margin-left: 20rpx;
}

.btn {
  background-color: #1aad19;
  color: white;
  padding: 15rpx 30rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  text-align: center;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #999;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 24rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}